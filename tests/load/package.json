{
  "name": "agentapi-load-tests",
  "version": "1.0.0",
  "description": "K6 Load Testing Suite for AgentAPI",
  "scripts": {
    "test": "k6 run k6_tests.js",
    "test:auth": "k6 run --scenario authentication k6_tests.js",
    "test:mcp": "k6 run --scenario mcp_connection k6_tests.js",
    "test:tools": "k6 run --scenario tool_execution k6_tests.js",
    "test:list": "k6 run --scenario list_tools k6_tests.js",
    "test:disconnect": "k6 run --scenario disconnect k6_tests.js",
    "test:mixed": "k6 run --scenario mixed_workload k6_tests.js",
    "test:all": "./run-tests.sh",
    "test:docker": "./run-tests.sh --docker",
    "test:monitor": "./run-tests.sh --docker --monitor",
    "test:staging": "./run-tests.sh --env staging",
    "test:production": "./run-tests.sh --env production",
    "monitor:start": "docker-compose up -d influxdb grafana",
    "monitor:stop": "docker-compose down",
    "monitor:logs": "docker-compose logs -f",
    "clean": "rm -f results.json results.csv summary.html summary.json",
    "help": "cat README.md"
  },
  "keywords": [
    "k6",
    "load-testing",
    "performance",
    "agentapi",
    "testing"
  ],
  "author": "AgentAPI Team",
  "license": "MIT",
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
