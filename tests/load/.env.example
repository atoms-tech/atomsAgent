# K6 Load Test Environment Configuration
# Copy this file to .env and update with your values

# Base URL for AgentAPI
BASE_URL=http://localhost:3284

# OAuth API endpoint base URL
OAUTH_BASE_URL=http://localhost:3000/api/mcp/oauth

# Test duration multiplier (1 = normal, 2 = 2x longer)
TEST_DURATION_MULTIPLIER=1

# K6 Output Options
# Uncomment to enable specific outputs

# InfluxDB for time-series metrics
# K6_OUT=influxdb=http://localhost:8086/k6

# JSON output for detailed results
# K6_OUT=json=results.json

# Cloud output (requires K6 Cloud account)
# K6_OUT=cloud
# K6_CLOUD_TOKEN=your-cloud-token

# Prometheus Remote Write
# K6_OUT=experimental-prometheus-rw

# CSV output
# K6_OUT=csv=results.csv

# Custom test parameters
# VUS_FACTOR=1.0  # Scale VUs (0.1 = 10%, 2.0 = 200%)
# ITERATION_DURATION=5s  # Default iteration duration

# Thresholds (override defaults)
# THRESHOLD_P95=500  # P95 latency in ms
# THRESHOLD_P99=2000  # P99 latency in ms
# THRESHOLD_ERROR_RATE=0.01  # Max error rate (1%)
# THRESHOLD_SUCCESS_RATE=0.99  # Min success rate (99%)

# Test data
# ENABLE_REAL_OAUTH=false  # Use real OAuth flow (requires valid credentials)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Monitoring
# ENABLE_DETAILED_LOGGING=false
# LOG_ERRORS_ONLY=true
